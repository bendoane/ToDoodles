<%=form_for(@user) do |f|%>

    <div class="field">
      <%= f.label :name%>
      <%= f.text_field :name%>
    </div>
    <br>
    <div class="field">
      <%= f.label :email%>
      <%= f.text_field :email%>
    </div>
    <br>
    <div class="field">
      <%= f.label :password%>
      <%= f.password_field :password%>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation%>
      <%= f.password_field :password_confirmation%>
    </div>
    <br>
    <%= f.submit%>
  <%end%>
